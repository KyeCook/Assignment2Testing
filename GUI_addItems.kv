BoxLayout:
    orientation: 'vertical'
    Label:
        size_hint_y: 0.2
        #id: output_label
        text: 'Add Item'
        text_size: self.size
        halign: 'left'
        valign: 'middle'
    Label:
        size_hint_y: 0.005
        #Below code is how to change widget background colour
        canvas.before:
            Color:
                rgba: 0,1,1,1
            Rectangle:
                pos: self.pos
                size: self.size
    Label:
        size_hint_y: 0.2
        text: 'Item Name:'
    TextInput:
        text: ""
        size_hint: 0.98, 0.2
    Label:
        size_hint_y: 0.2
        text: 'Description:'
    TextInput:
        text: ""
        size_hint: 0.98, 0.2
    Label:
        size_hint_y: 0.2
        text: 'Price Per Day:'
    TextInput:
        text: ""
        size_hint: 0.98, 0.2
    Button:
        id: update_saveItem
        size_hint: 0.98, 0.2
        text: 'Save Item'
        on_press: app.handle_SaveItem()
    Button:
        id: update_cancel
        size_hint: 0.98, 0.2
        text: 'Cancel'
        on_press: app.handle_Cancel()
    Label:
        size_hint_y: 0.3
        text: 'Enter details for new item'

